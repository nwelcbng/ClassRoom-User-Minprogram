page{
  height: 100%;
  overflow: hidden;
}
.background{
  width: 100%;
  height: 100%;
  opacity: 0.4;
  position: absolute;
  top: 0;
  z-index: -100;
}

.title{
  font-size: 50rpx;
  margin: 80rpx 0;
  width: 100%;
  text-align: center;
}
.input-item{
  margin-top: 30rpx ;
  display: flex;
  justify-content: space-evenly;
}
.input{
  display: inline-block;
  padding: 10rpx;
  border-radius: 10rpx;
  border: 1px solid #858585;
  vertical-align: middle;
}
.go-input{
  display: block;
  margin: 50rpx auto;
}
.label{
  width: 100rpx;
}
.status-radio{
  margin: 50rpx;
  display: flex;
  justify-content: space-evenly;
}
  <!-- <view class="title">公告列表</view> -->
  <van-search
  value="{{ value }}"
  shape="round"
  placeholder="请输入搜索关键词"
  show-action
  bind:change="onChange"
  bind:search="onSearch"
  bind:cancel="onCancel"
  />
